<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/client_input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/client_input_name"
        android:inputType="textPersonName"
        android:lines="1" />

    <EditText
        android:id="@+id/client_input_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/client_input_phone"
        android:inputType="phone"
        android:lines="1" />

    <EditText
        android:id="@+id/client_input_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/client_input_address"
        android:inputType="textPostalAddress"
        android:lines="1" />

</LinearLayout>